<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_icon"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:backgroundTint="#FFFDD0"
        app:icon="@drawable/hamburger_menu_foreground"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/banner_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen"
        android:text="Click on the locations given below to get started."
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_text" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weather_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFDD0"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon"
        app:strokeColor="#FCFFD0"
        app:strokeWidth="4dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_bg">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:padding="5dp"
                android:shadowColor="#DFD4D4"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="2.0"
                android:textColor="#292222"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="9th May,2021" />

            <ImageView
                android:id="@+id/weather_icon_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:contentDescription="Show an icon corresponding to the weather mood"
                tools:src="@drawable/w01d" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/weather_type"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_icon_view"
                android:layout_alignEnd="@id/weather_icon_view"
                android:gravity="center"
                tools:text="Sunny Day" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/miniTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_view"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/delius"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Minimum:"
                android:textColor="#393737"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Minimum: NA" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/curr_temp_view"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/miniTemp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:textColor="#333030"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="31" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/maxiTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_view"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/separator"
                android:fontFamily="@font/delius"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:text="Maximum:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Maximum: NA" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_view"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/miniTemp"
                android:gravity="center_horizontal|center_vertical"
                android:text="\u2022"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/temp_format_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/miniTemp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/curr_temp_view"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="\u2103"
                android:textColor="#333030"
                android:textSize="19sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon">

        <include layout="@layout/shimmer_frame_layout">
        </include>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/banner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/catamaran_extrabold"
        android:text="Welcome back!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/category_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_subtext">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="0dp"
            app:rippleColor="#B6C1C6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="320dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#5F6BB3"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/restaurant_icon" />
                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_bold"
                    android:gravity="center_horizontal"
                    android:text="Restaurant"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="0dp"
            app:rippleColor="#B6C1C6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="320dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#DA9D54"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/historical_site" />
                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_bold"
                    android:gravity="center_horizontal"
                    android:text="Historical"
                    android:textAlignment="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="0dp"
            app:rippleColor="#B6C1C6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="320dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E8BE3F"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/parks" />
                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_bold"
                    android:gravity="center_horizontal"
                    android:text="Parks"
                    android:textAlignment="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="0dp"
            app:rippleColor="#B6C1C6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="320dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#DC8AD8"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/leisure" />
                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_bold"
                    android:gravity="center_horizontal"
                    android:text="Leisure"
                    android:textAlignment="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>